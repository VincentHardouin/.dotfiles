[user]
	email = vincenthardouin@icloud.com
	name = Vincent Hardouin
[includeIf "gitdir:~/dev/pix/"]
	path = ~/dev/pix/.gitconfig-pix

[core]
	editor = vim
	autocrlf = input
	excludesfile = /Users/vincenthardouin/.gitignore_global
[alias]
	# Pop your last commit out of the history! No change lost, just unindexed
    	pop = reset HEAD^
	# Add a file/directory to your .gitignore
    	ignore = "!f() { echo \"$1\" >> .gitignore; }; f"
			cleaner = "!f() { git fetch --prune && git branch --merged $(git symbolic-ref --short refs/remotes/origin/HEAD) |xargs git branch -d && echo 'Clean completed';}; f"
[pull]
	rebase = true
[rerere]
	enabled = true
[commit]
	verbose = true
[rebase]
	autosquash = true
	autoStash = true
[init]
	defaultBranch = main
[branch]

